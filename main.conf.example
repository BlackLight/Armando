[hue]
enabled = False
# bridge = Address or name of your Philips Hue bridge
# lightbulbs = comma,separated,list,of,lightbulbs,to,control

[logger]
enabled = True
# Python logging format recognized here, see https://docs.python.org/3/library/logging.html#logging.Formatter
format = [%(asctime)-15s] %(message)s
# Available options: DEBUG, INFO, WARNING, ERROR
loglevel = DEBUG

[speech]
enabled = False
# Put your Google Speech Recognition API secret key here or in an environment variable named GOOGLE_SPEECH_API_KEY
# Instructions on how to get your key: http://www.chromium.org/developers/how-tos/api-keys
# google_speech_api_key = Your Google Speech API secret key
# language = en-us,it-it

[audio]
audio_file = __TMPDIR__/audio.flac
# threshold = 4000
# chunk_size = 32768
# rate = 44100

